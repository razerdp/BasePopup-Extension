<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/be_alert_material_bg"
    android:orientation="vertical">

    <TextView
        android:id="@id/be_alert_material_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/be_alert_material_padding"
        android:layout_marginTop="@dimen/be_alert_material_padding"
        android:layout_marginEnd="@dimen/be_alert_material_padding"
        android:textColor="@color/be_alert_material_title_color"
        android:textSize="@dimen/be_alert_material_title"
        android:textStyle="bold"
        tools:text="Alert" />

    <TextView
        android:id="@id/be_alert_material_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/be_alert_material_padding"
        android:layout_marginTop="@dimen/be_alert_material_vertical_padding"
        android:layout_marginEnd="@dimen/be_alert_material_padding"
        android:lineSpacingExtra="1.4dp"
        android:lineSpacingMultiplier="1.4"
        android:textColor="@color/be_alert_material_message_color"
        android:textSize="@dimen/be_alert_material_message"
        tools:text="Here is a message where we can put absolutely anything we want." />

    <LinearLayout
        android:id="@id/be_alert_material_layout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/be_alert_material_vertical_padding"
        android:gravity="right"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@id/be_alert_material_btn_negative"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="7dp"
            android:textColor="@color/be_alert_material_text_red"
            android:textSize="@dimen/be_alert_material_button_text_size"
            tools:text="Cancel" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@id/be_alert_material_btn_neutral"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="7dp"
            android:textColor="@color/be_alert_material_text_blue"
            android:textSize="@dimen/be_alert_material_button_text_size"
            android:visibility="gone"
            tools:text="中立" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@id/be_alert_material_btn_positive"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="7dp"
            android:textColor="@color/be_alert_material_text_blue"
            android:textSize="@dimen/be_alert_material_button_text_size"
            tools:text="Ok" />
    </LinearLayout>


</LinearLayout>